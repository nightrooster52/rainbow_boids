package  {	import flash.geom.ColorTransform;		public class Bird extends Boid{				var redOffset:Number;		var blueOffset:Number;		var greenOffset:Number;		public function Bird(master:BoidController, hue:Number) {			super(master, hue);			// constructor code			redOffset = red(hue);			blueOffset = blue(hue);			greenOffset = green(hue);			var ct:ColorTransform = new ColorTransform(1, 1, 1, 1, redOffset, greenOffset, blueOffset, 0);			this.transform.colorTransform = ct;					}		private function red(hue:Number):Number{			return 510 - 4.25*Math.abs(hue - 180);		}		private function green(hue:Number):Number{			if (hue > 180){				hue -= 360			}			return 510 - 4.25*Math.abs(hue - 60);		}		private function blue(hue:Number):Number{			if (hue < 180){				hue += 360			}			return 510 - 4.25*Math.abs(hue - 300);		}					}	}